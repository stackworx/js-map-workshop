{
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "jest": "^23.5.0",
    "prettier": "^1.14.2",
    "ts-jest": "^23.1.4",
    "typescript": "^3.0.3"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "always",
    "bracketSpacing": false
  },
  "scripts": {
    "test": "jest",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand",
    "build": "tsc",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "prettier:list": "prettier --list-different \"src/**/*.ts\""
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
